{
  "name": "cusdis-cloudflare-full",
  "version": "1.0.0",
  "description": "Full Cusdis comment system on Cloudflare Workers with React",
  "main": "src/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"wrangler dev\"",
    "build": "npm run build:frontend && npm run build:worker",
    "build:frontend": "vite build",
    "build:worker": "wrangler deploy --dry-run",
    "build:watch": "vite build --watch",
    "deploy": "npm run build && wrangler deploy",
    "db:init": "wrangler d1 execute cusdis-comments --file=./schema.sql",
    "db:migrate": "wrangler d1 execute cusdis-comments --file=./schema.sql"
  },
  "dependencies": {
    "hono": "^3.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@mantine/core": "^6.0.16",
    "@mantine/form": "^6.0.16",
    "@mantine/hooks": "^6.0.16",
    "@mantine/modals": "^6.0.16",
    "@mantine/notifications": "^6.0.16",
    "react-query": "^3.39.0",
    "react-hook-form": "^7.1.1",
    "react-icons": "^4.3.1",
    "dayjs": "^1.10.4",
    "markdown-it": "^12.0.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240909.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/markdown-it": "^12.2.3",
    "@vitejs/plugin-react": "^4.0.0",
    "wrangler": "^3.78.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.0",
    "concurrently": "^8.0.0"
  }
}